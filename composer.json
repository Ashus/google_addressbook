{
    "name": "ashus/google-addressbook",
    "type": "roundcube-plugin",
    "description": "Lets you sync your Google Addressbook in readonly mode with Roundcube.",
    "keywords": ["google", "addressbook", "sync", "contacts"],
    "homepage": "https://github.com/Ashus/google-addressbook",
    "license": "GPL-3.0+",
    "require": {
        "php": ">=7.0",
        "ext-json": "*",
        "roundcube/plugin-installer": "^0.3",
        "google/apiclient": "^2.12"
    },
    "extra": {
        "roundcube": {
            "sql-dir": "SQL"
        }
    },
    "config": {
        "allow-plugins": {
            "roundcube/plugin-installer": true
        }
    }
}
